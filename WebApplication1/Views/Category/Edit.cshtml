@model WebApplication1.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<style>
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .edit-container {
        max-width: 600px;
        margin: 60px auto;
        padding: 0 20px;
    }

    .edit-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        padding: 40px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .edit-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.15);
        }

    .page-title {
        color: #2c3e50;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 10px;
        text-align: center;
    }

    .page-subtitle {
        color: #7f8c8d;
        font-size: 1.1rem;
        font-weight: 500;
        margin-bottom: 30px;
        text-align: center;
        padding-bottom: 20px;
        border-bottom: 2px solid #ecf0f1;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .control-label {
        display: block;
        color: #34495e;
        font-weight: 600;
        margin-bottom: 8px;
        font-size: 0.95rem;
        letter-spacing: 0.3px;
    }

    .form-control {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e0e6ed;
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background-color: #f8f9fa;
    }

        .form-control:focus {
            outline: none;
            border-color: #3498db;
            background-color: white;
            box-shadow: 0 0 0 4px rgba(52, 152, 219, 0.1);
        }

    .text-danger {
        color: #e74c3c;
        font-size: 0.875rem;
        margin-top: 5px;
        display: block;
    }

    .btn {
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
        }

    .btn-outline-danger {
        background: white;
        color: #e74c3c;
        border: 2px solid #e74c3c;
        padding: 10px 24px;
        font-size: 0.9rem;
    }

        .btn-outline-danger:hover {
            background: #e74c3c;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(231, 76, 60, 0.3);
        }

    .actions-container {
        margin-top: 30px;
        text-align: center;
    }

    input[type="hidden"] {
        display: none;
    }

     (max-width: 768px) {
        .edit-container

    {
        margin: 30px auto;
    }

    .edit-card {
        padding: 30px 20px;
    }

    .page-title {
        font-size: 1.5rem;
    }

    }
</style>

<div class="edit-container">
    <div class="edit-card">
        <h1 class="page-title">Modifier</h1>
        <h4 class="page-subtitle">Catégorie</h4>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />

            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </form>

        <div class="actions-container">
            <a asp-action="Index" class="btn btn-outline-danger">Retour</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
