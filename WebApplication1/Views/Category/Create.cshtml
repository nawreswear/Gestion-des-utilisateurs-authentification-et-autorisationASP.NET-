@model WebApplication1.Models.Category

@{
    ViewData["Title"] = "Create";
}

<style>
    :root {
        --primary-color: #2563eb;
        --primary-hover: #1d4ed8;
        --danger-color: #dc2626;
        --danger-hover: #b91c1c;
        --text-primary: #1f2937;
        --text-secondary: #6b7280;
        --border-color: #e5e7eb;
        --background-light: #f9fafb;
        --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        --radius: 12px;
        --transition: 0.3s ease;
        --font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #e9ecef 100%);
        font-family: var(--font-family);
        color: var(--text-primary);
        min-height: 100vh;
        padding: 3rem 1rem;
        margin: 0;
    }

    .page-container {
        max-width: 480px;
        margin: 0 auto;
        background: white;
        border-radius: var(--radius);
        box-shadow: var(--shadow-lg);
        padding: 2.5rem 2rem 3rem;
        box-sizing: border-box;
    }

    .page-header {
        text-align: center;
        margin-bottom: 2.5rem;
    }

        .page-header h1 {
            font-size: 2.75rem;
            font-weight: 700;
            margin-bottom: 0.25rem;
            letter-spacing: -0.03em;
            color: var(--text-primary);
        }

        .page-header h4 {
            font-weight: 500;
            font-size: 1.125rem;
            color: var(--text-secondary);
            margin-bottom: 1rem;
        }

        .page-header hr {
            width: 75px;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-color), var(--primary-hover));
            border: none;
            border-radius: 2px;
            margin: 0 auto;
        }

    form {
        display: flex;
        flex-direction: column;
    }

    .form-group {
        margin-bottom: 1.8rem;
    }

    label {
        display: block;
        font-weight: 600;
        font-size: 0.9rem;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 0.04em;
        user-select: none;
    }

    input.form-control {
        width: 100%;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        color: var(--text-primary);
        background-color: var(--background-light);
        border: 2px solid var(--border-color);
        border-radius: var(--radius);
        transition: border-color var(--transition), box-shadow var(--transition);
        box-sizing: border-box;
    }

        input.form-control:focus {
            outline: none;
            border-color: var(--primary-color);
            background-color: white;
            box-shadow: 0 0 8px rgba(37, 99, 235, 0.3);
        }

        input.form-control:hover {
            border-color: #cbd5e1;
        }

    .text-danger {
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--danger-color);
        margin-top: 0.3rem;
        display: block;
    }

    .btn {
        padding: 0.75rem 2.5rem;
        font-size: 1.1rem;
        font-weight: 700;
        border-radius: var(--radius);
        border: none;
        cursor: pointer;
        transition: all var(--transition);
        user-select: none;
        text-align: center;
        display: inline-block;
        box-shadow: var(--shadow-md);
        background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
        color: white;
    }

        .btn:hover {
            background: linear-gradient(135deg, var(--primary-hover), #1e40af);
            box-shadow: var(--shadow-lg);
            transform: translateY(-2px);
        }

        .btn:active {
            transform: translateY(0);
            box-shadow: var(--shadow-md);
        }

    .btn-outline-danger {
        padding: 0.65rem 1.75rem;
        font-size: 0.9rem;
        background: white;
        color: var(--danger-color);
        border: 2px solid var(--danger-color);
        border-radius: var(--radius);
        box-shadow: none;
        transition: all var(--transition);
    }

        .btn-outline-danger:hover {
            background: var(--danger-color);
            color: white;
            box-shadow: var(--shadow-md);
            transform: translateY(-2px);
        }

        .btn-outline-danger:active {
            transform: translateY(0);
        }

    .back-link-container {
        text-align: center;
        margin-top: 1.8rem;
    }

    .validation-summary {
        background: #fee2e2;
        border-left: 4px solid var(--danger-color);
        padding: 1rem 1.25rem;
        border-radius: var(--radius);
        margin-bottom: 1.5rem;
        font-weight: 600;
        color: var(--danger-color);
        box-shadow: var(--shadow-sm);
    }

        .validation-summary ul {
            margin: 0;
            padding-left: 1.25rem;
        }

        .validation-summary li {
            margin-bottom: 0.25rem;
        }

     (max-width: 480px) {
        .page-container

    {
        padding: 2rem 1rem 2.5rem;
        max-width: 100%;
        border-radius: 0;
        box-shadow: none;
    }

    .page-header h1 {
        font-size: 2rem;
    }

    .btn, .btn-outline-danger {
        width: 100%;
        padding: 0.75rem 0;
        font-size: 1rem;
    }

    }
</style>

<div class="page-container" role="main" aria-labelledby="create-category-title">
    <header class="page-header">
        <h1 id="create-category-title">Créer une catégorie</h1>
        <h4>Formulaire d'ajout</h4>
        <hr />
    </header>

    <form asp-action="Create" novalidate>
        <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert" aria-live="assertive"></div>

        <div class="form-group">
            <label asp-for="CategoryName" class="control-label"></label>
            <input asp-for="CategoryName" class="form-control" aria-describedby="categoryNameHelp" />
            <span asp-validation-for="CategoryName" class="text-danger" id="categoryNameHelp"></span>
        </div>

        <button type="submit" class="btn">Créer</button>
    </form>

    <div class="back-link-container">
        <a asp-action="Index" class="btn btn-outline-danger" role="button" aria-label="Retour à la liste des catégories">Retour</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
