@model IEnumerable<WebApplication1.Models.Product>

@{
    ViewData["Title"] = "Liste des produits";
}

<style>
    :root {
        --primary-color: #2c3e50;
        --secondary-color: #3498db;
        --accent-color: #e74c3c;
        --text-dark: #2c3e50;
        --text-light: #7f8c8d;
        --bg-light: #f8f9fa;
        --border-color: #e1e8ed;
        --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.08);
        --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.12);
        --shadow-lg: 0 8px 24px rgba(0, 0, 0, 0.15);
    }

    .products-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0rem 1.5rem;
        background: linear-gradient(135deg, #f5f7fa 0%, #ffffff 100%);
        min-height: 100vh;
    }

    .products-header {
        text-align: center;
        margin-bottom: 3rem;
    }

        .products-header h1 {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 0.5rem;
            letter-spacing: -0.5px;
        }

    .products-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 2rem;
        margin-bottom: 3rem;
    }


    .product-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: var(--shadow-sm);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        flex-direction: column;
        height: 100%;
        border: 1px solid var(--border-color);
    }

        .product-card:hover {
            transform: translateY(-8px);
            box-shadow: var(--shadow-lg);
            border-color: var(--secondary-color);
        }

    .product-image-wrapper {
        position: relative;
        width: 100%;
        height: 280px;
        overflow: hidden;
        background: var(--bg-light);
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.4s ease;
    }

    .product-card:hover .product-image {
        transform: scale(1.08);
    }

    .product-body {
        padding: 1.75rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .product-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--primary-color);
        margin-bottom: 1rem;
        line-height: 1.4;
    }

        .product-title strong {
            color: var(--text-light);
            font-weight: 500;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

    .product-details {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        margin-bottom: 1.5rem;
        flex-grow: 1;
    }

    .product-detail-item {
        display: flex;
        align-items: center;
        font-size: 0.95rem;
        color: var(--text-dark);
    }

        .product-detail-item strong {
            color: var(--text-light);
            font-weight: 600;
            min-width: 90px;
            font-size: 0.875rem;
        }

    .product-price {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--secondary-color);
    }

    .product-category {
        display: inline-block;
        background: var(--bg-light);
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.875rem;
        color: var(--primary-color);
        font-weight: 500;
    }

    .product-footer {
        padding: 1.25rem 1.75rem;
        background: var(--bg-light);
        border-top: 1px solid var(--border-color);
        display: flex;
        gap: 0.75rem;
        justify-content: center;
    }

    .btn-elegant {
        padding: 0.625rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.875rem;
        text-decoration: none;
        transition: all 0.3s ease;
        border: 2px solid;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .btn-primary-elegant {
        background: var(--secondary-color);
        color: white;
        border-color: var(--secondary-color);
    }

        .btn-primary-elegant:hover {
            background: #2980b9;
            border-color: #2980b9;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(52, 152, 219, 0.3);
        }

    .btn-secondary-elegant {
        background: white;
        color: var(--primary-color);
        border-color: var(--primary-color);
    }

        .btn-secondary-elegant:hover {
            background: var(--primary-color);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(44, 62, 80, 0.2);
        }

    .pagination-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
        margin-top: 3rem;
        padding: 2rem 0;
    }

    .pagination-btn {
        min-width: 45px;
        height: 45px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        background: white;
        color: var(--primary-color);
        border: 2px solid var(--border-color);
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: var(--shadow-sm);
    }

        .pagination-btn:hover {
            background: var(--secondary-color);
            color: white;
            border-color: var(--secondary-color);
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

    .alert-elegant {
        max-width: 600px;
        margin: 4rem auto;
        padding: 2rem;
        border-radius: 12px;
        background: #fff3cd;
        border: 2px solid #ffc107;
        color: #856404;
        text-align: center;
        font-size: 1.125rem;
        font-weight: 500;
        box-shadow: var(--shadow-sm);
    }

     (max-width: 1000px) {
        .products-grid

    {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }

    .products-header h1 {
        font-size: 2rem;
    }

    .product-footer {
        flex-direction: column;
    }

    .btn-elegant {
        width: 100%;
    }

    }
</style>

@if (Model != null && Model.Any())
{
    <div class="products-container">
        <div class="products-header">
            <h1>@ViewData["Title"]</h1>
        </div>

        <div class="products-grid">
            @foreach (var product in Model)
            {
                var photoPath = "~/images/" + (product.ImagePath ?? "noimage.jpg");

                <div class="product-card">
                    <div class="product-image-wrapper">
                        <img class="product-image" src="@photoPath" asp-append-version="true" alt="@product.Name" />
                    </div>

                    <div class="product-body">
                        <h5 class="product-title">
                            <strong>Nom:</strong> @product.Name
                        </h5>

                        <div class="product-details">
                            <div class="product-detail-item">
                                <strong>Prix:</strong>
                                <span class="product-price">@product.Price.ToString("0.00") Dt</span>
                            </div>
                            <div class="product-detail-item">
                                <strong>Quantité:</strong>
                                <span>@product.QteStock unités</span>
                            </div>
                            <div class="product-detail-item">
                                <strong>Catégorie:</strong>
                                <span class="product-category">@product.Category?.CategoryName</span>
                            </div>
                        </div>
                    </div>

                    @using Microsoft.AspNetCore.Identity
                @inject SignInManager<IdentityUser> SignInManager
            @if (SignInManager.IsSignedIn(User) || User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <div class="product-footer">
                            <a asp-action="Details" asp-route-id="@product.ProductId" class="btn-elegant btn-primary-elegant">
                                <i class="fas fa-info-circle" style="margin-right: 8px;"></i> Détails
                            </a>
                            <a asp-controller="Panier" asp-action="AddProduct" asp-route-id="@product.ProductId" class="btn-elegant btn-secondary-elegant">
                                <i class="fas fa-cart-plus" style="margin-right: 8px;"></i> Ajouter
                            </a>

                        </div>
                    }
                </div>
            }
        </div>

        <div class="pagination-wrapper">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <a asp-action="Index" asp-route-categoryId="@ViewBag.CategoryId"
                   asp-route-page="@i" class="pagination-btn">
                    @i
                </a>
            }
        </div>
    </div>
}
else
{
    <div class="products-container">
        <div class="alert-elegant">
            Aucun produit à afficher.
        </div>
    </div>
}
