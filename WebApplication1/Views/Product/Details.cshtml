@model WebApplication1.Models.Product
@{
    ViewData["Title"] = "Details";
    var photoPath = "~/images/" + (Model.ImagePath ?? "noimage.jpg");
}
<h1>Détails</h1>
<div>
    <h4>Produit</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Nom :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QteStock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QteStock)
        </dd>
        <dt class="col-sm-2">
            Catégorie :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt class="col-sm-2">
            <label><b>Image : </b> </label>
        </dt>
        <dd class="col-sm-10">
            <div class="card-body text-left">
                <img src="@photoPath" asp-append-version="true"
                     height="100" width="100" />
            </div>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ProductId" class="btn btn-danger">Edit</a> |
    <a asp-action="Index"class="btn btn-sm btn-outline-danger">Retour</a>
</div>