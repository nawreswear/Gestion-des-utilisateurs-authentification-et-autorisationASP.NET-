@using WebApplication1.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrapMinty.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <!-- Toggle categories sidebar -->
                <button class="btn btn-outline-primary">
                    <img src="~/images/categorie-.png" alt="Ouvrir la liste des catégories" id="toggleMenu" class="img-fluid" style="max-width: 24px;" />
                </button>

                <a class="navbar-brand" asp-controller="Product" asp-action="Index">Gestion des Produits</a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01"
                        aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <!-- Left navbar -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Product" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Category" asp-action="Index">Liste Catégorie</a>
                        </li>
                        @* Show create options only for Admin/Manager *@
                        @if (SignInManager.IsSignedIn(User) && (User.IsInRole("Admin") || User.IsInRole("Manager")))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Product" asp-action="Create">Create Produit</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Category" asp-action="Create">Create Catégorie</a>
                            </li>
                        }
                    </ul>

                    <!-- 🛒 Cart button -->
                    <ul class="navbar-nav ms-auto me-2">
                        <li class="nav-item">
                            <a class="btn btn-outline-success position-relative" asp-controller="Panier" asp-action="Index">
                                <img src="~/images/panier5.png" alt="Panier" style="width:50px;height:50px;" />
                               
                            </a>
                        </li>
                    </ul>

                    <!-- Search bar -->
                    <form class="d-flex me-3" asp-area="" asp-controller="Product" asp-action="Search" method="get">
                        <input class="form-control me-sm-2" type="search" placeholder="Search..." name="val" />
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                    </form>

                    <!-- Admin dropdown -->
                    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                    {
                        <ul class="navbar-nav ms-3">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button"
                                   aria-haspopup="true" aria-expanded="false">Administration</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="CreateRole">Create Role</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="ListRoles">List Roles</a>
                                </div>
                            </li>
                        </ul>
                    }
                </div>

                <!-- Login/Logout -->
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <ul class="navbar-nav ms-auto">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                                    <button type="submit"
                                            class="btn btn-danger btn-sm px-3 py-1 rounded-pill text-white fw-bold logout-btn">
                                        Logout @User.Identity.Name
                                    </button>
                                </form>
                            </li>

                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <bosy>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar for categories -->
            <div class="col-md-2" id="sidebar" style="display: none;">
                <ul class="list-group">
                    @await Html.PartialAsync("_CategoriesMenu", ViewData["Categories"])
                </ul>
            </div>

                <div class="container-fluid p-0">
                    <div class="row g-0" style="min-height: 100vh;">
                        <!-- Main content only -->
                        <div class="col-12" id="mainContent">
                            <main role="main" class="h-100 d-flex flex-column justify-content-center align-items-center">
                                @RenderBody()
                            </main>
                        </div>
                    </div>
                </div>


        </div>
    </div>
    </body>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WebApplication1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/CustomScript.js"></script>
    <script src="~/js/MonScript.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
<style>
    .logout-btn {
        background: linear-gradient(45deg, #dc3545, #ff6b6b);
        border: none;
        transition: all 0.3s ease;
    }

        .logout-btn:hover {
            background: linear-gradient(45deg, #c82333, #ff4b4b);
            transform: scale(1.05);
            box-shadow: 0 4px 10px rgba(220, 53, 69, 0.4);
        }

</style>
</html>
