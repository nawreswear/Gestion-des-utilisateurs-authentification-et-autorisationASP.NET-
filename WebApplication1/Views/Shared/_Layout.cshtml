<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrapMinty.min.css" />
    <script src="~/js/CustomScript.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <button class="btn btn-outline-primary">
                    <img src="~/images/categorie-.png" alt="Ouvrir la liste des catégories" id="toggleMenu" class="img-fluid" style="max-width: 24px;" />
                </button>
                <a class="navbar-brand" asp-controller="Product" asp-action="Index">Gestion des Produits</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01"
                        aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Product" asp-action="Index">
                                Home
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Category" asp-action="Index">Liste Catégorie</a>
                           

                        </li>
                        @using Microsoft.AspNetCore.Identity
                        @inject SignInManager<IdentityUser> SignInManager
                        @* Show create options only for Admin/Manager *@
                        @if (SignInManager.IsSignedIn(User) && (User.IsInRole("Admin") || User.IsInRole("Manager")))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Product" asp-action="Create">Create Produit</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Category" asp-action="Create">Create Catégorie</a>
                            </li>
                        }
                    </ul>

                    @* 🔎 Search bar - always visible *@
                    <form class="d-flex" asp-area="" asp-controller="Product" asp-action="Search" method="get">
                        <input class="form-control me-sm-2" type="search" placeholder="Search..." name="val" />
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                    </form>

                    @* Admin dropdown - only for Admin *@
                    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                    {
                        <ul class="navbar-nav ms-3">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button"
                                   aria-haspopup="true" aria-expanded="false">Administration</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="CreateRole">Create Role</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-controller="Admin" asp-action="ListRoles">List Roles</a>
                                </div>
                            </li>
                        </ul>
                    }
                </div>

                @* Login/Logout section *@
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <ul class="navbar-nav ms-auto">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <button type="submit" class="nav-link btn btn-link py-0">
                                        Logout @User.Identity.Name
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

       
    </header>
  
    <div class="container-fluid">
        <div class="row">
            <!-- Menu latéral pour les catégories -->
            <div class="col-md-2" id="sidebar" style="display: none;">
                <p> </p>
                <ul class="list-group">
                    @await Html.PartialAsync("_CategoriesMenu", ViewData["Categories"])
                </ul>
            </div>
            <!-- Contenu principal -->
            <div class="col-md-9" id="mainContent">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WebApplication1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
