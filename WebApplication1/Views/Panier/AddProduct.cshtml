@{
    ViewBag.Title = "Ajouter Produit";
}

<style>
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .cart-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .cart-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        border-radius: 15px;
        margin-bottom: 2rem;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }

        .cart-header h2 {
            margin: 0;
            font-size: 2rem;
            font-weight: 600;
        }

    .cart-items {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .cart-item {
        background: white;
        border-radius: 15px;
        padding: 1.5rem;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        display: flex;
        gap: 1.5rem;
        align-items: center;
    }

        .cart-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.12);
        }

    .cart-item-image {
        flex-shrink: 0;
        width: 200px;
        height: 200px;
        border-radius: 12px;
        overflow: hidden;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 5px;
    }

        .cart-item-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 8px;
        }

    .cart-item-details {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

        .cart-item-details h5 {
            margin: 0;
            font-size: 1.1rem;
            color: #2d3748;
            font-weight: 600;
        }

        .cart-item-details hr {
            margin: 0;
            border: none;
            border-top: 1px solid #e2e8f0;
        }

    .quantity-badge {
        display: inline-block;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-weight: 600;
    }

    .cart-actions {
        display: flex;
        gap: 0.75rem;
        margin-top: 0.5rem;
    }

        .cart-actions a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 45px;
            height: 45px;
            border-radius: 10px;
            transition: all 0.3s ease;
            background: #f7fafc;
            border: 2px solid #e2e8f0;
        }

            .cart-actions a:hover {
                transform: scale(1.1);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            }

            .cart-actions a.PlusProducts {
                border-color: #48bb78;
            }

                .cart-actions a.PlusProducts:hover {
                    background: #48bb78;
                    border-color: #48bb78;
                }

            .cart-actions a.MinProducts {
                border-color: #ed8936;
            }

                .cart-actions a.MinProducts:hover {
                    background: #ed8936;
                    border-color: #ed8936;
                }

            .cart-actions a.RemoveLink {
                border-color: #f56565;
            }

                .cart-actions a.RemoveLink:hover {
                    background: #f56565;
                    border-color: #f56565;
                }

            .cart-actions a img {
                width: 28px;
                height: 28px;
            }

    .price-section {
        background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
        padding: 1rem;
        border-radius: 10px;
        margin-top: 0.5rem;
    }

        .price-section h5 {
            margin: 0;
            color: #2d3748;
            font-size: 1rem;
        }

    .cart-summary {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        margin-top: 2rem;
        text-align: center;
    }

        .cart-summary h5 {
            font-size: 1.5rem;
            color: #2d3748;
            margin-bottom: 1.5rem;
            font-weight: 700;
        }

        .cart-summary .btn {
            padding: 0.75rem 2rem;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
            border: none;
            margin: 0 0.5rem;
        }

        .cart-summary .btn-secondary {
            background: #718096;
        }

            .cart-summary .btn-secondary:hover {
                background: #4a5568;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(113, 128, 150, 0.3);
            }

        .cart-summary .btn-success {
            background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
        }

            .cart-summary .btn-success:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(72, 187, 120, 0.4);
            }

    .empty-cart {
        background: white;
        border-radius: 15px;
        padding: 4rem 2rem;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        text-align: center;
    }

        .empty-cart img {
            width: 200px;
            height: auto;
            margin-bottom: 2rem;
            opacity: 0.8;
        }

        .empty-cart h3 {
            color: #4a5568;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .empty-cart p {
            color: #718096;
            margin-bottom: 2rem;
        }

        .empty-cart .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .empty-cart .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
            }

     (max-width: 768px) {
        .cart-item

    {
        flex-direction: column;
        text-align: center;
    }

    .cart-item-image {
        width: 100%;
        max-width: 250px;
    }

    .cart-actions {
        justify-content: center;
    }

    }
</style>

<div class="cart-container">
    <div class="cart-header">
        <h2>Mon panier</h2>
    </div>

    @if (ViewBag.Liste.Count > 0)
    {
        <div class="cart-items">
            @foreach (var item in ViewBag.Liste)
            {
                <div class="cart-item" id="row-@item.Prod.ProductId">
                    <div class="cart-item-image">
                        <img src="~/images/@item.Prod.Image" alt="@item.Prod.Name">
                    </div>
                    <div class="cart-item-details">
                        <h5>Nom : @item.Prod.Name</h5>
                        <hr />
                        <h5>Catégorie : @item.Prod.Category.CategoryName</h5>
                        <hr />
                        <h5>Quantité : <span class="quantity-badge" id="quantite_@item.Prod.ProductId">@item.quantite</span></h5>
                        <hr />
                        <div class="cart-actions">
                            <a href="#" class="PlusProducts" data-id="@item.Prod.ProductId">
                                <img src="~/images/add.png" alt="Ajouter">
                            </a>
                            <a href="#" class="MinProducts" data-id="@item.Prod.ProductId">
                                <img src="~/images/moin.png" alt="Diminuer">
                            </a>
                            <a href="#" class="RemoveLink" data-id="@item.Prod.ProductId">
                                <img src="~/images/delet.png" alt="Supprimer">
                            </a>
                        </div>
                        <div class="price-section">
                            <h5>
                                Prix de <span id="rquantite_@item.Prod.ProductId">@item.quantite</span> article(s) : <span id="total_@item.Prod.ProductId">@item.TotalPrice</span>
                            </h5>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="cart-summary">
            <h5>Prix total à payer : @ViewBag.total</h5>
            @if (ViewBag.total > 0)
            {
                <div>
                    <a href="~/Product/Index" class="btn btn-secondary" role="button">Home</a>
                    <a href="~/Panier/Checkout" class="btn btn-success" role="button">Commander</a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-cart">
            <img src="~/images/panier_vide.png" alt="Panier vide" />
            <h3>Votre panier est vide !</h3>
            <p>Partez à la découverte de nos produits et faites-vous plaisir</p>
            <a href="~/Product/Index" class="btn btn-primary">Voir les produits</a>
        </div>
    }
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/Monscript.js" type="text/javascript"></script>
<script src="~/js/CustomScript.js"></script>
